<!doctype html>

<html>
<head>
	<title>My HCI Friends</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width,initial-scale=1.0">
</head>
	<link href="css/bootstrap-theme.css" rel="stylesheet">
	<link href="css/bootstrap.css" rel="stylesheet">
	<link href="css/hci-friends.css" rel="stylesheet">
<body>
	<div class="container">
	<h1>My HCI Friends</h1>

	<form id="addFriendForm" role="form" method="get" action="/add">
		<div class="friend">
			<img src="http://lorempixel.com/500/500/people" alt="friend" class="img-responsive img-rounded" >
			<h3>Fake friend</h3>
			<p>All my friends are imaginary</p>
		</div><hr>
		
		{{#each friends}}
		<div class="friend">
			<img src="{{imageURL}}" alt="image" class="img-responsive img-rounded" >
			<a href="#">
				<h3 id="friend">{{name}}</h3>
			</a>
			<p>{{description}}</p>
		</div><hr>
		{{/each}}
		<h3>Add a friend</h3>
	    <div class="form-group">
	      <label for="name">Name:</label>
	      <input type="text" class="form-control" id="name" placeholder="Name" name="name">
	    </div>
	    <div class="form-group">
	      <label for="description">Description:</label>
	      <input type="text" class="form-control" id="description" placeholder="Description" name="description">
	    </div>
	    <input type="submit" id="submitBtn" class="btn btn-default" value="Add the friend"></input>
	</form>
	<script src="js/jquery-1.11.0.js"></script>
	<script src="js/bootstrap.js"></script>
	<script src="js/hci-friends.js"></script>
</div>
</body>
</html>
